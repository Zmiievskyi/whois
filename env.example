# Provider Discovery Tool - Environment Configuration
# Copy this file to .env and set your actual values

# VirusTotal API Configuration
VT_API_KEY=your-virustotal-api-key-here
VT_PREMIUM=false
VT_TIMEOUT=30
VT_CACHE_TTL=3600

# Application Settings
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
VT_RATE_LIMIT_CALLS=4
VT_RATE_LIMIT_WINDOW=60

# Performance Settings
DNS_TIMEOUT=10
HTTP_TIMEOUT=10
WHOIS_TIMEOUT=15

# Feature Flags
ENABLE_DNS_ANALYSIS=true
ENABLE_VIRUSTOTAL=true
ENABLE_CACHING=true

# Streamlit Configuration (optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# Censys API Configuration (Phase 3B: Shodan Alternative)
# =============================================================================

# Censys API Credentials
# Get your free API credentials from: https://search.censys.io/account/api
# Free tier: 250 queries per month, rate limited
# Academic: Higher limits for research
CENSYS_API_ID=your-censys-api-id-here
CENSYS_API_SECRET=your-censys-api-secret-here

# Cache TTL for Censys responses (seconds)
# Default: 7200 (2 hours) - longer than VT due to rate limits
CENSYS_CACHE_TTL=7200

# Rate limiting for Censys API (requests per minute)
# Free tier: Conservative rate limiting
# Academic/Paid: Higher limits
CENSYS_RATE_LIMIT=10

# =============================================================================
# Shodan API Configuration (Phase 3B: Premium WAF Detection)
# =============================================================================

# Shodan API Key
# Get your API key from: https://account.shodan.io/
# Free tier: Very limited (1 query per month)
# Developer plan: $59/month for 10,000 query credits
# Enterprise plans: Higher limits available
SHODAN_API_KEY=your-shodan-api-key-here

# Cache TTL for Shodan responses (seconds)
# Default: 14400 (4 hours) - very long due to query costs
SHODAN_CACHE_TTL=14400

# Rate limiting for Shodan API (requests per minute)
# Very conservative due to API costs
SHODAN_RATE_LIMIT=1
